doctype html
html(lang='en')
  head
    title Poker-Fun
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet')
  body
    .container
      .row
        .col.mx-auto
          .card.my-5
            .card-body
              h5.card-title.text-center.sortable Balance Sheets
              table.table.striped
                tr
                  th Name
                  th Balance
                each user in data.users
                    tr
                        td= user.full_name
                        td= "$ " +Math.round(user.balance)